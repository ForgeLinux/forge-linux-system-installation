#!/bin/bash
echo "#################################"
echo "Start forgeinux-before"
echo "#################################"
echo
echo "#################################"
echo "Populate Core Team keys"
echo "#################################"
echo
pacman-key --init
pacman-key --populate archlinux
pacman-key --populate chaotic
echo

echo
echo "#################################"
echo "Changing into our own linux.preset"
echo "#################################"
mv -v /etc/mkinitcpio.d/forgeinux /etc/mkinitcpio.d/linux.preset
echo
echo "#################################"
echo "End forgeinux-before"
echo "#################################"
echo
